---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Contact" desc="Ways to contact Professional Tax Services">
    <main>
        <div class="p-8">
            <div class="max-w-5xl mx-auto">
                <h1 class="text-4xl font-extrabold text-brand-blue indent-0">
                    CONTACT
                </h1>

                <br />
                <br />

                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3186.8788525289524!2d-86.42863478429697!3d36.98882486475785!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8865ef521278a80d%3A0xf30b0618099534f2!2sProfessional%20Tax%20Service!5e0!3m2!1sen!2sus!4v1679283968949!5m2!1sen!2sus"
                    width="600"
                    height="450"
                    class="w-full"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>

                <br />

                <form action="" class="flex flex-col gap-4" onsubmit="">
                    <div class="grid md:grid-cols-2 gap-y-4 gap-x-8">
                        <div class="flex flex-col">
                            <label for="fullname">Full Name</label>

                            <input
                                type="text"
                                name="fullname"
                                id="fullname"
                                class="outline-none p-1 border border-light-900 hover:border-brand-blue focus:border-brand-blue"
                            />
                        </div>

                        <div class="flex flex-col">
                            <label for="email">Email</label>

                            <input
                                type="email"
                                name="email"
                                id="email"
                                class="outline-none p-1 border border-light-900 hover:border-brand-blue focus:border-brand-blue"
                            />
                        </div>
                    </div>

                    <div class="flex flex-col">
                        <label for="subject">subject</label>

                        <input
                            type="text"
                            name="subject"
                            id="subject"
                            class="outline-none p-1 border border-light-900 hover:border-brand-blue focus:border-brand-blue"
                        />
                    </div>

                    <div class="flex flex-col">
                        <label for="message">Message</label>

                        <textarea
                            name="message"
                            id="message"
                            cols="30"
                            rows="10"
                            class="outline-none p-1 border border-light-900 hover:border-brand-blue focus:border-brand-blue"
                        ></textarea>
                    </div>

                    <div class="flex justify-end">
                        <button
                            class="bg-brand-blue text-white px-4 py-2 w-fit font-bold tracking-widest rounded-sm hover:bg-opacity-90"
                        >
                            Submit</button
                        >
                    </div>
                </form>
            </div>
        </div>
    </main>
</Layout>

<style>
    label {
        @apply uppercase text-sm text-black/75;
    }
</style>
